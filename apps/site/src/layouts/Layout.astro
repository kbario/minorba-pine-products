---
import { Button } from '@minorba/ui/button';
import { FEATURES, isFeatureEnabled } from '../constants/feature-flags';
import '../styles/global.css';

interface Props {
  title?: string;
}

const links = [
  {
    display: 'Home',
    link: '/',
  },
  {
    display: 'Products',
    link: '/products',
    flag: FEATURES.ProductsPage,
  },
  {
    display: 'Contact',
    link: '/contact',
    flag: FEATURES.ContactPage,
  },
];
const headerLinks = links.slice(1).filter((x) => isFeatureEnabled(x.flag));

const { title = 'Minorba Pine Products' } = Astro.props;
---

<!doctype html>
<html
  lang='en'
  class='h-full w-full'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body class='bg-surface-default text-content-default w-full'>
    <header
      class='sticky top-0 z-10 flex h-fit items-center justify-between p-4 backdrop-blur-lg'>
      <div
        class='bg-container-default rounded-default flex h-16 w-full items-center justify-between px-4 lg:justify-start'>
        {
          headerLinks.length ? (
            <>
              <div class='flex-1'>
                <Button
                  as={'a'}
                  href='/'>
                  Minorba Pine Products
                </Button>
              </div>
              <ul class='flex gap-1 px-1'>
                {links
                  .filter((l) => l.flag)
                  .map((l) => (
                    <li>
                      <Button
                        as={'a'}
                        href={l.link}>
                        {l.display}
                      </Button>
                    </li>
                  ))}
              </ul>
            </>
          ) : (
            <Button
              as={'a'}
              href='/'>
              Minorba Pine Products
            </Button>
          )
        }
      </div>
    </header>
    <slot />
  </body>

  <style is:global>
    h1 {
      font-size: 2rem;
      font-weight: 500;
    }
    h2 {
      font-size: 1.75rem;
    }
  </style>
</html>
